{
  "name": "jsop",
  "version": "0.0.1",
  "description": "Javascript benchmark tool.",
  "main": "server.js",
  "engines": {
    "node": "~4"
  },
  "scripts": {
    "postinstall": "jspm install",
    "jspm": "jspm",
    "start-dev": "cd static && live-server --no-browser",
    "check": "node -c index.js && jscs index.js && node -c test/server.js && jscs test/server.js && echo 'OK!' || true",
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/",
    "docker-redis": "docker run --rm -p 6379:6379 redis",
    "build-bundle": "cd build && node bundle.js",
    "build-runner": "jspm bundle jsop.runner static/jsop.runner.min.js --minify"
  },
  "keywords": [
    "javascript",
    "benchmark",
    "tool"
  ],
  "author": "Harry Truong <harry@asdfjkltech.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:harrytruong/jsop.io.git"
  },
  "license": "MIT",
  "devDependencies": {
    "jscs": "^2.4.0",
    "jspm": "^0.16.14",
    "live-server": "^0.8.2",
    "mocha": "^2.3.3",
    "superagent-mock": "^1.8.0",
    "supertest": "^1.1.0",
    "uglify-js": "^2.5.0"
  },
  "dependencies": {
    "connect-redis": "^3.0.1",
    "express": "^4.13.3",
    "express-session": "^1.12.0",
    "ioredis": "^1.10.0",
    "lodash": "^3.10.1",
    "superagent": "^1.4.0"
  },
  "jspm": {
    "directories": {
      "baseURL": "static/assets/js"
    },
    "dependencies": {
      "json": "github:systemjs/plugin-json@^0.1.0",
      "lodash": "npm:lodash@^3.10.1",
      "sass": "github:screendriver/plugin-sass@^0.0.8"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
